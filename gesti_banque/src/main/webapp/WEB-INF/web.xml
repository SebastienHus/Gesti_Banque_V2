<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>ServletConnexion</servlet-name>
  	<display-name>ServletConnexion</display-name>
  	<description></description>
  	<servlet-class>Servlets.ServletConnexion</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Authentif</servlet-name>
  	<display-name>Authentif</display-name>
  	<description></description>
  	<servlet-class>Servlets.Authentif</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>ServletRetour</servlet-name>
  	<display-name>ServletRetour</display-name>
  	<description></description>
  	<servlet-class>controller.ServletRetour</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>S1</servlet-name>
  	<jsp-file>/WEB-INF/views/common_views/login.jsp</jsp-file>
  </servlet>


  <servlet-mapping>
  	<servlet-name>ServletConnexion</servlet-name>
  	<url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Authentif</servlet-name>
  	<url-pattern>/Authentif</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ServletRetour</servlet-name>
  	<url-pattern>/retour</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>S1</servlet-name>
  	<url-pattern>/login.jsp</url-pattern>
  </servlet-mapping>
